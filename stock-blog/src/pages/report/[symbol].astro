      bodyContent = bodyContent.replace('<div id="tv-advanced-chart-placeholder"></div>', advancedChartHtml);

      // 3. Financials Widget
      const financialsHtml = `
      <div class="tradingview-widget-container mb-8" style="height: 950px;">
