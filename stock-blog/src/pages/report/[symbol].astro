      const sectorEtf = sectorEtfMap[stockInfo?.["GICS Sector"]] || "SPY";

      // 1. Symbol Overview Widget (Above Risk/Return)
      const riskReturnHeader = '<h2 id="risk-return">üéØ „É™„Çπ„ÇØ„Éª„É™„Çø„Éº„É≥ÂàÜÊûê</h2>';
      const symbolOverviewHtml = `
      <div class="tradingview-widget-container mb-8" style="height: 450px;">
        <div class="tradingview-widget-container__widget"></div>
        <script type="text/javascript" src="https://s3.tradingview.com/external-embedding/embed-widget-symbol-overview.js" async>
        {
