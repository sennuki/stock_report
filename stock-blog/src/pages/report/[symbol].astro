        "Consumer Discretionary": "VCR",
        "Consumer Staples": "VDC",
        "Energy": "VDE",
        "Financials": "VFH",
        "Health Care": "VHT",
        "Industrials": "VIS",
        "Information Technology": "VGT",
        "Materials": "VAW",
