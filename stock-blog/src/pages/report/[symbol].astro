---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import stocks from "@/data/stocks.json";
import fs from "node:fs";
import path from "node:path";
import PlotlyChart from "@/components/report/PlotlyChart.astro";
import TradingViewWidget from "@/components/report/TradingViewWidget.astro";
import PeerLinks from "@/components/report/PeerLinks.astro";

export async function getStaticPaths() {
  // Use stocks.json as the source of truth for symbols
  return (stocks as any[]).map((stock: any) => ({
    params: { symbol: stock.Symbol_YF },
  }));
}

const { symbol } = Astro.params;
const jsonPath = path.join(process.cwd(), "public", "reports", `${symbol}.json`);

let reportData: any = null;

if (fs.existsSync(jsonPath)) {
  const content = fs.readFileSync(jsonPath, "utf-8");
  reportData = JSON.parse(content);
}

const stockInfo = (stocks as any[]).find((s: any) => s.Symbol_YF === symbol);
const title = `銘柄分析: ${symbol} - ${stockInfo?.Security || ''}`;

const base = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
---

<Layout title={title}>
  <Header />
  
  <main id="main-content" class="w-full px-4 py-8 max-w-app mx-auto">
    <div class="mb-6">
       <a href={base} class="text-skin-accent hover:underline inline-flex items-center">
         <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
         </svg>
         銘柄一覧に戻る
       </a>
    </div>

    {!reportData ? (
      <div class="report-content bg-skin-card p-10 rounded-lg border border-skin-line shadow-sm text-center">
        <p class="text-xl">レポートが見つかりません: {symbol}</p>
        <p class="mt-4 text-gray-500">データ生成プロセスを実行してください。</p>
      </div>
    ) : (
      <div class="report-content bg-skin-card p-4 sm:p-8 rounded-lg border border-skin-line shadow-sm">
        <h1 class="text-3xl font-bold mb-6">銘柄分析レポート: {reportData.symbol} ({reportData.security})</h1>

            <TradingViewWidget symbol={reportData.full_symbol} type="symbol-info" />

        <hr class="my-8 border-skin-line" />

        <nav class="toc bg-skin-fill/50 p-6 rounded-lg border border-skin-line mb-10">
            <h3 class="text-lg font-bold mb-4">目次</h3>
            <ul class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-2 list-disc pl-5">
                <li><a href="#stock-chart" class="text-skin-accent hover:underline">株価推移・概要</a></li>
                <li><a href="#risk-return" class="text-skin-accent hover:underline">リスク・リターン分析</a></li>
                <li><a href="#peers" class="text-skin-accent hover:underline">同業種・競合</a></li>
                <li><a href="#sector-peers" class="text-skin-accent hover:underline">同セクター他社</a></li>
                <li><a href="#performance" class="text-skin-accent hover:underline">パフォーマンス比較</a></li>
                <li><a href="#fundamentals" class="text-skin-accent hover:underline">ファンダメンタルズ分析 (概要)</a></li>
                <li><a href="#fundamentals-detail" class="text-skin-accent hover:underline">財務データ推移 (詳細)</a>
                    <ul class="pl-5 mt-1 text-sm list-circle">
                        <li><a href="#balance-sheet" class="text-skin-accent hover:underline">貸借対照表</a></li>
                        <li><a href="#income-statement" class="text-skin-accent hover:underline">損益計算書</a></li>
                        <li><a href="#cash-flow" class="text-skin-accent hover:underline">キャッシュフロー</a></li>
                        <li><a href="#shareholder-return" class="text-skin-accent hover:underline">株主還元</a></li>
                        <li><a href="#dividend-history" class="text-skin-accent hover:underline">1株あたり配当金</a></li>
                    </ul>
                </li>
            </ul>
        </nav>

        <section id="stock-chart">
          <h2 class="text-2xl font-bold mb-4 border-b pb-2">📈 株価推移・概要</h2>
                <TradingViewWidget symbol={reportData.full_symbol} type="symbol-overview" height={500} />
        </section>

        <section id="risk-return" class="mt-12">
          <h2 class="text-2xl font-bold mb-4 border-b pb-2">🎯 リスク・リターン分析</h2>
          <p class="mb-4">
            <span class="inline-block w-3 h-3 bg-red-500 rounded-full mr-1"></span> <strong>{reportData.symbol}</strong> (対象) vs 
            <span class="inline-block w-3 h-3 bg-blue-500 transform rotate-45 mr-1"></span> <strong>{reportData.sector_etf}</strong> (セクター) vs 
            <span class="inline-block w-3 h-3 bg-black rounded-sm mr-1"></span> ★ <strong>S&P 500</strong>
          </p>
          <PlotlyChart chartData={reportData.charts.risk_return} id="chart-risk-return" />
        </section>

        <section id="peers" class="mt-12">
          <PeerLinks title={`🏢 同業種・競合 (${reportData.sub_industry})`} peers={reportData.peers.sub_industry} />
        </section>

        <section id="sector-peers">
          <PeerLinks title={`🏭 同セクター他社 (${reportData.sector})`} peers={reportData.peers.sector} collapsible={true} />
        </section>

        <hr class="my-12 border-skin-line" />

        <section id="performance">
          <h2 class="text-2xl font-bold mb-4 border-b pb-2">📈 パフォーマンス比較</h2>
          <TradingViewWidget 
            symbol={reportData.full_symbol} 
            type="advanced-chart" 
            height={600} 
            compareSymbols={[
              { symbol: `AMEX:${reportData.sector_etf}`, position: "SameScale" },
              { symbol: "FRED:SP500", position: "SameScale" }
            ]}
          />
        </section>

        <section id="fundamentals" class="mt-12">
          <h2 class="text-2xl font-bold mb-4 border-b pb-2">📊 ファンダメンタルズ分析</h2>
          <TradingViewWidget symbol={reportData.full_symbol} type="financials" height={950} />
        </section>

        <section id="fundamentals-detail" class="mt-12">
          <h2 class="text-2xl font-bold mb-4 border-b pb-2">📈 財務データ推移 (詳細分析)</h2>
          
          <div id="balance-sheet" class="scroll-mt-20">
            <PlotlyChart chartData={reportData.charts.bs} id="chart-bs" title="貸借対照表" />
          </div>
          
          <div id="income-statement" class="scroll-mt-20">
            <PlotlyChart chartData={reportData.charts.is} id="chart-is" title="損益計算書" />
          </div>
          
          <div id="cash-flow" class="scroll-mt-20">
            <PlotlyChart chartData={reportData.charts.cf} id="chart-cf" title="キャッシュフロー" />
          </div>
          
          <div id="shareholder-return" class="scroll-mt-20">
            <PlotlyChart chartData={reportData.charts.tp} id="chart-tp" title="株主還元" />
          </div>
          
          <div id="dividend-history" class="scroll-mt-20">
            <PlotlyChart chartData={reportData.charts.dps} id="chart-dps" title="1株あたり配当金" />
            <p class="text-sm text-gray-500 mt-2">※配当回数を推定して年換算利回りを算出しています。</p>
          </div>
        </section>
      </div>
    )}
  </main>
  <Footer />
</Layout>

<style>
  .report-content {
    color: var(--color-text-base);
  }
  .report-content h2 {
    margin-top: 2.5rem;
    color: var(--color-text-base);
  }
  .scroll-mt-20 {
    scroll-margin-top: 5rem;
  }
  .list-circle {
    list-style-type: circle;
  }
</style>
